<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@drawable/backgruond_botron"
    android:layout_marginBottom="10dp"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.7"
        app:cardCornerRadius="360dp">

        <ImageView
            android:id="@+id/imageIconAvata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvEmailAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/cardView"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:text="vuquocchinh891@gmail.com" />

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cardView"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/whiteTextColor"
            android:text="Xác nhận"
            android:background="@drawable/backgruond_botron_xacnhan"
            android:id="@+id/btnAdd"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="10dp"
            android:text="Từ chối"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/backgruond_botron_cancel"
            android:layout_width="0dp"
            android:id="@+id/btnCancel"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
    </LinearLayout>
</RelativeLayout>